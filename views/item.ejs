<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>List Data Items</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }
        
        td, th {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
        }
        
        tr:nth-child(even) {
            background-color: #dddddd;
        }
        body{
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center">List Data Items</h1>
   <% if(!user) { %>
        <h3 style="text-align: center"><a href="/" style="text-decoration: none">Home</a></h3>    
  <%  } else {  %>
        <h3 style="text-align: center"><a href="/" style="text-decoration: none">Home</a> | <a href="/items/add" style="text-decoration: none">Add List Item</a></h3>
   <% } %>
    <table>
        <tr>
            <th>Id</th>
            <th>Name Item</th>
            <th>Price</th>
            <th>Type</th>
          <%  if (user) { %>
                <th>Options</th>
           <% } %>
        </tr>
        <% dataItems.forEach((dataItem) => { %>
            <tr>
                <td><%= dataItem.id %></td>
                <td><%= dataItem.itemName %></td>
                <td><%= dataItem.price %></td>
                <td><%= dataItem.type %></td>
              <%  if(user) {   %>
                    <td><a href="/items/<%= dataItem.id %>/edit">Edit</a> | <a href="/items/<%= dataItem.id %>/delete" onclick="return confirm('Are you sure you want to delete this data?')">Delete</a></td>
            <%    }  %>
            </tr>
           <% }) %>
    </table>
    <% if (!user) { %>
        <h3>fajar belum masuk</h3>
  <%  } else { %>
     <h3>fajar masuk</h3>
  <%    } %>
</body>
</html>